{
    "name": "symfony-flex-demo/orm",
    "type": "project",
    "license": "MIT",
    "description": "A minimal ORM Flex project",
    "require": {
        "symfony/flex": "^1.0",
        "symfony/maker-bundle": "^1",
        "symfony/orm-pack": "^1",
        "symfony/yaml": "^3.4 || ^4.0"
    },
    "require-dev": {
        "symfony/dotenv": "^3.4 || ^4.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "bin": ["bin/console"],
    "config": {
        "bin-dir": "bin"
    },
    "scripts": {
        "console": [
            "console"
        ],
        "initialize": [
            "console doctrine:database:create",
            "console make:entity Author",
            "console make:entity BlogPost",
            "console doctrine:migrations:diff --quiet",
            "console doctrine:migrations:migrate --no-interaction --quiet"
        ],
        "security:check": [
            "security-checker security:check"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    }
}
